#############################################
# Algo Data Ingestion - Example environment #
#############################################

# Admin/API
ADMIN_TOKEN=change_me_please
INGEST_HOST=0.0.0.0
INGEST_PORT=8000
CORS_ORIGINS=["*"]
LOG_LEVEL=INFO
METRICS_PATH=/metrics

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
FEATURE_NAMESPACE=features
FEATURE_TTL_SEC=3600

# Data Lake (local path inside container)
DATA_LAKE_PATH=/app/data_lake
MARKET_PATH=/app/data_lake/market
ONCHAIN_PATH=/app/data_lake/onchain
SOCIAL_PATH=/app/data_lake/social
NEWS_PATH=/app/data_lake/news

# Backfill loops (inside API)
BACKFILL_ENABLED=0
BACKFILL_EXCHANGE=binance
BACKFILL_SYMBOLS=BTC/USDT
BACKFILL_TIMEFRAMES=1m
BACKFILL_LOOKBACK_MIN=15
BACKFILL_INTERVAL_SEC=300

# TTL sweep loop (inside API)
TTL_SWEEP_ENABLED=0
TTL_SWEEP_INTERVAL_SEC=900

# Scheduler
API_BASE_URL=http://ingestion-api:8000
RUN_ON_START=1
SCHED_TZ=UTC
SCHED_METRICS_PORT=9002
MARKET_JOBS=[{"exchange":"binance","symbol":"BTC/USDT","timeframe":"1m","lookback_minutes":60,"cron":"*/5 * * * *"}]
MARKET_INGEST_JOBS=[
  {"exchange":"binance","symbol":"BTC/USDT","timeframe":"1m","limit":500,"cron":"*/10 * * * *"}
]
TTL_SWEEP_CRON=*/15 * * * *
TTL_SWEEP_PATTERN=features:market:*
TTL_SWEEP_TTL=3600

# External APIs (Phase 3)
GLASSNODE_API_KEY=
COVALENT_API_KEY=
NEWS_API_KEY=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER=

# Sentiment ML
ENABLE_SENTIMENT_PIPELINE=0

# Cloud object storage via fsspec (Phase 3)
# Example for S3 (requires s3fs)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# DATA_LAKE_PATH=s3://my-bucket/algo-data-lake
# MARKET_PATH=s3://my-bucket/algo-data-lake/market
# ONCHAIN_PATH=s3://my-bucket/algo-data-lake/onchain
# SOCIAL_PATH=s3://my-bucket/algo-data-lake/social
# NEWS_PATH=s3://my-bucket/algo-data-lake/news
